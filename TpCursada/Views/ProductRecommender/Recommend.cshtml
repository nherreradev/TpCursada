@{
    Layout = "_Layout";
}

@model ProductListViewModel

<form action="/ProductRecommender/Recommend" method="post">
        <div>
            <label for="productID">productID:</label>
            <input type="number" name="productID" id="productID">
        </div>    
        <div>
            <button type="submit">Recomendame</button>
        </div>
    </form>

    @*<div>
        <h1>@ViewBag.Prediccion</h1>
    </div>*@

@if (ViewBag.Prediccion != null)
{
    <div>
      @*  <h1>Predicion  de productos para el Producto: @Model.product.Id </h1>*@
        <h1>Predicion  de productos para el Producto: @Model.product.Nombre </h1>
    @*    <h2>Predicion  de productos para el Producto:@Model.product.Nombre </h2>*@
        <img src="@Model.product.Imagen" />
    </div>

    <table class="table">
        <tr>
            <th>ProductID </th>
            <th>Nombre </th>
            <th>Imagen </th>
            <th>Precio </th>
            <th>Score </th>
        </tr>

        @foreach (var item in Model._productsRecommendersList)
        {
            <tr>
                @*<td>
        ACA DEBERIA Y LOS OBJETOS CARGADOS CON LABase de datos
        @item.product.Id
        </td>*@
                <td>
                    @item.CoproductRecomend.Id
                </td>

                <td>
                    @item.CoproductRecomend.Nombre
                </td>
                <td>
                    <img src="@item.CoproductRecomend.Imagen" />
                </td>

                <td>
                    @item.CoproductRecomend.Precio
                </td>

                <td>
                    @item.predictionScore
                </td>

            </tr>
        }
    </table>
}





